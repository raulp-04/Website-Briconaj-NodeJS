<!--Trebuie cumva sa fac fiecare produs separat, nu intr-un tabel-->
<% if(isOk==true){ produse.forEach(prod => { %> 
    <form action="/adaugare_cos" method="post">
        <div class="div_magazin">
            <%= prod.id %> |
            <%= prod.nume %> |
            <%= prod.pret.toFixed(2) %> lei |
            <%= prod.stoc %> buc. |
            <% if(username) { %>
                <input type="hidden" name="id" value="<%= prod.id %>">
                <button class="index_btn">Adaugare in cos</button>
            <% } %>
        </div>
    </form>
<% });} else { %>
    <p>Eroare la citirea din baza de date</p>
<% } %>